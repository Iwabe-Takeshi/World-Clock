{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "outDir": "app",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
  },
  "include": ["src", "src/types/*.d.ts"]
}
