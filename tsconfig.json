{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "checkJs": true,
    "allowJs": true
  },
  "include": ["src", "src/types/*.d.ts"]
}
